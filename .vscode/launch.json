{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "env": {
        "MONGODB_URI": "mongodb://localhost:27017/organizr"
      },
      "program": "${workspaceRoot}/server/server.js"
    },
    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "port": 5858,
      "address": "127.0.0.1",
      "restart": false,
      "sourceMaps": false,
      "localRoot": "${workspaceRoot}/server",
      "remoteRoot": "/"
    }
  ]
}