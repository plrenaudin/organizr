{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "plugins": [
        "vue"
    ],
    "extends": ["eslint:recommended", "plugin:vue/essential"],
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "__API__": true,
        "__GOOGLE_CLIENT_ID__": true,
        "google": true,
        "process": true
    },
    "rules": {
        "vue/attributes-order": "off",
        "vue/require-v-for-key" :"off",
        "no-console":"off",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}